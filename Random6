import java.util.Scanner;
import java.util.Random;

public class Bai6random{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Random rd = new Random();

        int soNgauNhien = rd.nextInt(100) + 1;
        int doan;

        do {
            System.out.print("Nhap so ban doan: ");
            doan = sc.nextInt();

            if (doan > soNgauNhien) {
                System.out.println("Lon hon");
            } else if (doan < soNgauNhien) {
                System.out.println("Nho hon");
            } else {
                System.out.println("Chuc mung! Ban da doan dung!");
            }
        } while (doan != soNgauNhien);
    }
}
