package Assigment7;

import java.util.Scanner;

public class Text5 {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter characters in a string: ");
        String s = sc.nextLine();

        System.out.print("\nEnter a character in a string: ");
        char c = sc.next().charAt(0);

        int count = 0;
        for (int i = 0; i < s.length(); i++) {
            if (s.charAt(i) == c) {
                count++;
            }
        }
        System.out.print("\nOccurrences of a character in a string: " + count);
    }
}
